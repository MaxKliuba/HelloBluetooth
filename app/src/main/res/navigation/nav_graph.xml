<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/connectionFragment">

    <fragment
        android:id="@+id/connectionFragment"
        android:name="com.maxclub.android.hellobluetooth.destinations.ConnectionFragment"
        android:label="@string/connection_fragment_title"
        tools:layout="@layout/fragment_connection"/>
    <fragment
        android:id="@+id/myControllersFragment"
        android:name="com.maxclub.android.hellobluetooth.destinations.MyControllersFragment"
        android:label="@string/my_controllers_fragment"
        tools:layout="@layout/fragment_my_controllers" >
        <action
            android:id="@+id/action_myControllersFragment_to_controllerFragment"
            app:destination="@id/controllerFragment" />
        <action
            android:id="@+id/action_myControllersFragment_to_controllerSettingsFragment"
            app:destination="@id/controllerSettingsFragment" />
    </fragment>
    <fragment
        android:id="@+id/terminalFragment"
        android:name="com.maxclub.android.hellobluetooth.destinations.TerminalFragment"
        android:label="@string/terminal_fragment_title"
        tools:layout="@layout/fragment_terminal">
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.maxclub.android.hellobluetooth.destinations.SettingsFragment"
        android:label="@string/settings_fragment_title"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/controllerFragment"
        android:name="com.maxclub.android.hellobluetooth.destinations.ControllerFragment"
        android:label="@string/controller_fragment_title"
        tools:layout="@layout/fragment_controller" >
        <argument
            android:name="controller"
            app:argType="com.maxclub.android.hellobluetooth.data.Controller" />
        <action
            android:id="@+id/action_controllerFragment_to_widgetSettingsFragment"
            app:destination="@id/widgetSettingsFragment" />
    </fragment>
    <fragment
        android:id="@+id/controllerSettingsFragment"
        android:name="com.maxclub.android.hellobluetooth.destinations.ControllerSettingsFragment"
        android:label="@string/controller_settings_fragment_title"
        tools:layout="@layout/fragment_controller_settings" >
        <argument
            android:name="controller"
            app:argType="com.maxclub.android.hellobluetooth.data.Controller"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/widgetSettingsFragment"
        android:name="com.maxclub.android.hellobluetooth.WidgetSettingsFragment"
        android:label="fragment_widget_settings"
        tools:layout="@layout/fragment_widget_settings" >
        <argument
            android:name="widget"
            app:argType="com.maxclub.android.hellobluetooth.data.Widget" />
    </fragment>
</navigation>